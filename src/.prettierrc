{
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "printWidth": 100,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always",
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "singleQuote": false,
        "jsxBracketSameLine": true,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "singleQuote": true,
        "tabWidth": 2
      }
    }
  ]
}
